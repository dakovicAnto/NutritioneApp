<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="100" android:exitFadeDuration="300">
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="#00BCD4"/>
                    <padding android:left="0dp" android:right="0dp"/>


                    <corners android:radius="6dp"/>



                </shape>
            </item>



        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="#01ACC3"/>
                    <padding android:left="0dp" android:right="0dp"/>
                    <corners android:radius="6dp"/>



                </shape>
            </item>


        </layer-list>
    </item>
</selector>