<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintInfo"
    android:layout_width="wrap_content"
    android:layout_height="80dp">

    <View
        android:id="@+id/viewLijevoPlavo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rv_meal_sr_backg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/spinnerArrow"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:layout_marginStart="-8dp"
        android:background="@drawable/ripple_spinner_meal"
        app:layout_constraintBottom_toBottomOf="@+id/viewIzmedjuAmburga"
        app:layout_constraintStart_toEndOf="@+id/tvSelectBy"
        app:layout_constraintTop_toTopOf="@+id/viewIzmedjuAmburga" />

    <TextView
        android:id="@+id/tvSelectBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="@string/byDay"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewww"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginTop="-16dp"
        android:layout_marginBottom="-16dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/tvSelectBy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSelectBy" />
</androidx.constraintlayout.widget.ConstraintLayout>