<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!--
        <item name="textInputStyle">
            @style/MyCustomTextInputStyle
        </item>          -->
        <!-- Customize your theme here. -->
    </style>
    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">#FF009BAF</item>

        <item name="hintTextAppearance">@style/hintStyle</item>
    </style>

    <style name="MyCustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#FF687173</item>


    </style>
    <style name="MyALertDialogButtonStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:textColor">#FF687173</item>
    </style>

</resources>